.fix-screen
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  z-index 999
  .mask
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background rgba(0, 0, 0, 0.6)
.start-mask
  .container
    width 100%
    height 100%
    .title
      width 5.2rem
      height 2.74rem
      background url(../images/index-title.png)
      background-size cover
      margin 0 auto
    .text
      width 6.03rem
      height 2.08rem
      background url(../images/index-text.png)
      background-size cover
      margin 2rem auto 2.6rem
    .btn-start
      width 4.5rem
      height 1.97rem
      background url(../images/index-btn-start.png)
      background-size cover
      margin 0 auto
